package = dev.karmakrafts.kwire.ffi
headers = fficonfig.h ffi.h
staticLibraries = libffi.a

# Windows
compilerOpts.mingw_x64 = -Ibuild/libffi/windowsX64/include
libraryPaths.mingw_x64 = build/libffi/windowsX64/lib

# Linux
compilerOpts.linux_x64 = -Ibuild/libffi/linuxX64/include
libraryPaths.linux_x64 = build/libffi/linuxX64/lib
compilerOpts.linux_arm64 = -Ibuild/libffi/linuxArm64/include
libraryPaths.linux_arm64 = build/libffi/linuxArm64/lib

# Android
compilerOpts.android_x64 = -Ibuild/libffi/androidX64/include
libraryPaths.android_x64 = build/libffi/androidX64/lib
compilerOpts.android_arm64 = -Ibuild/libffi/androidArm64/include
libraryPaths.android_arm64 = build/libffi/androidArm64/lib
compilerOpts.android_arm32 = -Ibuild/libffi/androidArm32/include
libraryPaths.android_arm32 = build/libffi/androidArm32/lib

# macOS
compilerOpts.macos_x64 = -Ibuild/libffi/macosX64/include
libraryPaths.macos_x64 = build/libffi/macosX64/lib
compilerOpts.macos_arm64 = -Ibuild/libffi/macosArm64/include
libraryPaths.macos_arm64 = build/libffi/macosArm64/lib

# iOS
compilerOpts.iphoneos_x64 = -Ibuild/libffi/iosX64Simulator/include
libraryPaths.iphoneos_x64 = build/libffi/iosX64Simulator/lib
compilerOpts.iphoneos_arm64 = -Ibuild/libffi/iosArm64Device/include
libraryPaths.iphoneos_arm64 = build/libffi/iosArm64Device/lib
compilerOpts.iphoneos_simulator_arm64 = -Ibuild/libffi/iosArm64Simulator/include
libraryPaths.iphoneos_simulator_arm64 = build/libffi/iosArm64Simulator/lib

# tvOS
compilerOpts.tvos_x64 = -Ibuild/libffi/tvosX64Simulator/include
libraryPaths.tvos_x64 = build/libffi/tvosX64Simulator/lib
compilerOpts.tvos_arm64 = -Ibuild/libffi/tvosArm64Device/include
libraryPaths.tvos_arm64 = build/libffi/tvosArm64Device/lib
compilerOpts.tvos_simulator_arm64 = -Ibuild/libffi/tvosArm64Simulator/include
libraryPaths.tvos_simulator_arm64 = build/libffi/tvosArm64Simulator/lib

# watchOS
compilerOpts.watchos_x64 = -Ibuild/libffi/watchosX64Simulator/include
libraryPaths.watchos_x64 = build/libffi/watchosX64Simulator/lib
compilerOpts.watchos_arm64 = -Ibuild/libffi/watchosArm64Device/include
libraryPaths.watchos_arm64 = build/libffi/watchosArm64Device/lib
compilerOpts.watchos_simulator_arm64 = -Ibuild/libffi/watchosArm64Simulator/include
libraryPaths.watchos_simulator_arm64 = build/libffi/watchosArm64Simulator/lib